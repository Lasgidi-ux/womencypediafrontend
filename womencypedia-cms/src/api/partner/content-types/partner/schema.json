{
    "kind": "collectionType",
    "collectionName": "partners",
    "info": {
        "singularName": "partner",
        "pluralName": "partners",
        "displayName": "Partner",
        "description": "Partner organizations and institutions"
    },
    "options": {
        "draftAndPublish": true,
        "i18n": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "description": {
            "type": "text",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "partnerType": {
            "type": "enumeration",
            "enum": [
                "institutional",
                "corporate",
                "nonprofit",
                "academic",
                "government",
                "media",
                "foundation"
            ],
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "tier": {
            "type": "enumeration",
            "enum": [
                "platinum",
                "gold",
                "silver",
                "bronze",
                "strategic"
            ],
            "default": "bronze",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "logo": {
            "type": "media",
            "multiple": false,
            "allowedTypes": [
                "images"
            ],
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "website": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "country": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "continent": {
            "type": "enumeration",
            "enum": [
                "Africa",
                "Asia",
                "Europe",
                "North America",
                "South America",
                "Oceania",
                "Global"
            ],
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "socialLinks": {
            "type": "json",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "contactEmail": {
            "type": "email",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "partnershipStartDate": {
            "type": "datetime",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "partnershipEndDate": {
            "type": "datetime",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "featured": {
            "type": "boolean",
            "default": false,
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "order": {
            "type": "integer",
            "default": 0,
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        }
    }
}