{
    "kind": "collectionType",
    "collectionName": "verification_applications",
    "info": {
        "singularName": "verification-application",
        "pluralName": "verification-applications",
        "displayName": "Verification Application",
        "description": "Applications for verification of women-led organizations"
    },
    "options": {
        "draftAndPublish": false,
        "i18n": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "applicantName": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "applicantEmail": {
            "type": "email",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "applicantRole": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "organizationName": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "organizationWebsite": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "country": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "continent": {
            "type": "enumeration",
            "enum": [
                "Africa",
                "Asia",
                "Europe",
                "North America",
                "South America",
                "Oceania",
                "Global"
            ],
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "sector": {
            "type": "enumeration",
            "enum": [
                "Government",
                "Private Sector",
                "Non-Profit",
                "Academic",
                "Religious",
                "Healthcare",
                "Media",
                "Finance",
                "Technology",
                "Agriculture",
                "Education",
                "Environmental",
                "Human Rights",
                "Community"
            ],
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "organizationType": {
            "type": "enumeration",
            "enum": [
                "Government Agency",
                "NGO",
                "Social Enterprise",
                "Company",
                "Foundation",
                "Institution",
                "Association",
                "Cooperatives"
            ],
            "required": true
        },
        "foundingYear": {
            "type": "integer",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "leadershipDescription": {
            "type": "text",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "missionStatement": {
            "type": "text",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "impactMetrics": {
            "type": "json",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "verificationDocuments": {
            "type": "media",
            "multiple": true,
            "allowedTypes": [
                "documents",
                "images"
            ],
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "status": {
            "type": "enumeration",
            "enum": [
                "pending",
                "under_review",
                "approved",
                "rejected",
                "needs_more_info"
            ],
            "default": "pending",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "submittedAt": {
            "type": "datetime",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "reviewedAt": {
            "type": "datetime",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "reviewedBy": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "plugin::users-permissions.user"
        },
        "reviewNotes": {
            "type": "text",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "rejectionReason": {
            "type": "text",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "applicant": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "plugin::users-permissions.user"
        }
    }
}