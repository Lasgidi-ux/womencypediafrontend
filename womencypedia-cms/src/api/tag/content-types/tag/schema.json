{
    "kind": "collectionType",
    "collectionName": "tags",
    "info": {
        "singularName": "tag",
        "pluralName": "tags",
        "displayName": "Tag",
        "description": "Tags for categorizing and searching biographies"
    },
    "options": {
        "draftAndPublish": false,
        "i18n": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "unique": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "slug": {
            "type": "uid",
            "targetField": "name"
        },
        "biographies": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::biography.biography",
            "mappedBy": "tags"
        }
    }
}