{
    "kind": "collectionType",
    "collectionName": "contributions",
    "info": {
        "singularName": "contribution",
        "pluralName": "contributions",
        "displayName": "Contribution",
        "description": "Controlled contributions including articles, case studies, and reports"
    },
    "options": {
        "draftAndPublish": false,
        "i18n": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "title": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "slug": {
            "type": "uid",
            "targetField": "title",
            "required": true
        },
        "type": {
            "type": "enumeration",
            "enum": [
                "article",
                "case_study",
                "report",
                "research_paper",
                "opinion",
                "news"
            ],
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "content": {
            "type": "richtext",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "excerpt": {
            "type": "text",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "author": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "plugin::users-permissions.user"
        },
        "authorName": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "authorBio": {
            "type": "text",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "country": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "continent": {
            "type": "enumeration",
            "enum": [
                "Africa",
                "Asia",
                "Europe",
                "North America",
                "South America",
                "Oceania",
                "Global"
            ],
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "sector": {
            "type": "enumeration",
            "enum": [
                "Government",
                "Private Sector",
                "Non-Profit",
                "Academic",
                "Religious",
                "Healthcare",
                "Media",
                "Finance",
                "Technology",
                "Agriculture",
                "Education",
                "Environmental",
                "Human Rights",
                "Community"
            ],
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "tags": {
            "type": "json",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "featuredImage": {
            "type": "media",
            "multiple": false,
            "allowedTypes": [
                "images"
            ],
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "attachments": {
            "type": "media",
            "multiple": true,
            "allowedTypes": [
                "documents",
                "images"
            ],
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "status": {
            "type": "enumeration",
            "enum": [
                "draft",
                "pending_review",
                "approved",
                "published",
                "rejected",
                "archived"
            ],
            "default": "draft",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "submittedAt": {
            "type": "datetime",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "reviewedAt": {
            "type": "datetime",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "reviewedBy": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "plugin::users-permissions.user"
        },
        "reviewNotes": {
            "type": "text",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "publishedAt": {
            "type": "datetime",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "featured": {
            "type": "boolean",
            "default": false,
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "order": {
            "type": "integer",
            "default": 0,
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "relatedLeader": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::leader.leader"
        }
    }
}