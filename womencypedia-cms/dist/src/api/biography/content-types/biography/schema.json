{
    "kind": "collectionType",
    "collectionName": "biographies",
    "info": {
        "singularName": "biography",
        "pluralName": "biographies",
        "displayName": "Biography",
        "description": "Interpretive biographies of remarkable women throughout history"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "name": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            },
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "region": {
            "type": "enumeration",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            },
            "required": true,
            "enum": [
                "Africa",
                "Europe",
                "Asia",
                "Middle East",
                "North America",
                "South America",
                "Oceania",
                "Global"
            ]
        },
        "era": {
            "type": "enumeration",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            },
            "required": true,
            "enum": [
                "Ancient",
                "Pre-colonial",
                "Colonial",
                "Post-colonial",
                "Contemporary"
            ]
        },
        "category": {
            "type": "enumeration",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            },
            "required": true,
            "enum": [
                "Leadership",
                "Culture & Arts",
                "Spirituality & Faith",
                "Politics & Governance",
                "Science & Innovation",
                "Community Builders",
                "Activism & Justice",
                "Education",
                "Diaspora Stories"
            ]
        },
        "domain": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "introduction": {
            "type": "richtext",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "required": true
        },
        "earlyLife": {
            "type": "richtext",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "pathToInfluence": {
            "type": "richtext",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "contributions": {
            "type": "richtext",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "symbolicPower": {
            "type": "richtext",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "culturalContext": {
            "type": "richtext",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "legacy": {
            "type": "richtext",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "image": {
            "type": "media",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            },
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        },
        "gallery": {
            "type": "media",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            },
            "multiple": true,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        },
        "tags": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::tag.tag",
            "inversedBy": "biographies"
        },
        "sources": {
            "type": "json",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "relatedWomen": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::biography.biography"
        },
        "relatedMovements": {
            "type": "json",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "relatedDynasties": {
            "type": "json",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "featured": {
            "type": "boolean",
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            },
            "default": false
        }
    }
}
