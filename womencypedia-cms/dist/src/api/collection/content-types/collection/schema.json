{
    "kind": "collectionType",
    "collectionName": "collections",
    "info": {
        "singularName": "collection",
        "pluralName": "collections",
        "displayName": "Collection",
        "description": "Curated collections of biographies around themes"
    },
    "options": {
        "draftAndPublish": true,
        "i18n": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "title": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "slug": {
            "type": "uid",
            "targetField": "title"
        },
        "description": {
            "type": "richtext",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "coverImage": {
            "type": "media",
            "multiple": false,
            "allowedTypes": [
                "images"
            ],
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "biographies": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::biography.biography"
        },
        "featured": {
            "type": "boolean",
            "default": false,
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "order": {
            "type": "integer",
            "default": 0,
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        }
    }
}
